<launch>
  <remap from="/camera/image" to="/camera/rgb/image_raw" />
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="x_pos" default="-3.5"/>
  <arg name="y_pos" default="-3.0"/>
  <arg name="z_pos" default="0.0"/>
  <arg name='yaw' default="1.577191" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- <arg name="world_name" value="$(find my_following_line_package)/worlds/lf1.world"/> -->
    <!-- <arg name="world_name" value="$(find my_following_line_package)/worlds/lf1_asphalt.world"/> -->
    <!-- <arg name="world_name" value="$(find my_following_line_package)/worlds/lf1d_asphalt.world"/> -->
    <!-- <arg name="world_name" value="$(find my_following_line_package)/worlds/lf1_ground.world"/> -->
    <!-- <arg name="world_name" value="$(find my_following_line_package)/worlds/lf1d_ground.world"/> -->
    <arg name="world_name" value="$(find my_following_line_package)/worlds/track.world"/>
    <arg name="paused" value="True"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro 
      --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model)_for_autorace.urdf.xacro" />

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model turtlebot3_$(arg model) 
        -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -Y $(arg yaw) -param robot_description" />
</launch>